<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mp.user.menu.bank.BankActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:backgroundTint="@color/Success"
            android:drawableStart="@drawable/ic_account_circle_black_24dp"
            android:drawableTint="@color/Success"
            android:ems="10"
            android:hint="@string/nama_sesuai_akun_bank"
            android:inputType="text"
            android:textColor="@color/Success"
            android:textColorHint="@color/colorSecondaryLight"
            tools:ignore="UnusedAttribute" />

        <EditText
            android:id="@+id/bankTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:backgroundTint="@color/Success"
            android:drawableStart="@drawable/ic_account_balance_black_24dp"
            android:drawableTint="@color/Success"
            android:ems="10"
            android:hint="@string/bank_tujuan"
            android:inputType="text"
            android:textColor="@color/Success"
            android:textColorHint="@color/colorSecondaryLight"
            tools:ignore="UnusedAttribute" />

        <EditText
            android:id="@+id/accountTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:backgroundTint="@color/Success"
            android:drawableStart="@drawable/ic_account_balance_black_24dp"
            android:drawableTint="@color/Success"
            android:ems="10"
            android:hint="@string/nomor_rekening"
            android:inputType="phone"
            android:textColor="@color/Success"
            android:textColorHint="@color/colorSecondaryLight"
            tools:ignore="UnusedAttribute" />

        <EditText
            android:id="@+id/nominal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:backgroundTint="@color/Success"
            android:drawableStart="@drawable/ic_fiber_smart_record_black_24dp"
            android:drawableTint="@color/Success"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/nominalBank"
            android:inputType="numberSigned"
            android:textColor="@color/Success"
            android:textColorHint="@color/colorSecondaryLight"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="Autofill,UnusedAttribute" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:backgroundTint="@color/Success"
            android:drawableStart="@drawable/ic_lock_open_black_24dp"
            android:drawableTint="@color/Success"
            android:ems="10"
            android:hint="@string/kata_sandi"
            android:inputType="numberPassword"
            android:textColor="@color/Success"
            android:textColorHint="@color/colorSecondaryLight"
            tools:ignore="UnusedAttribute" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/Success"
            android:drawableStart="@drawable/ic_description_black_24dp"
            android:drawableTint="@color/Success"
            android:ems="10"
            android:hint="@string/keterangan"
            android:inputType="textPersonName"
            android:textColor="@color/Success"
            android:textColorHint="@color/colorSecondaryLight"
            tools:ignore="Autofill,UnusedAttribute" />

        <Button
            android:id="@+id/transferButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_success"
            android:text="@string/transfersBank"
            android:textColor="@color/textPrimary" />

    </LinearLayout>

</ScrollView>
